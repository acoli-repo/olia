    <!-- http://purl.org/olia/discourse/discourse.CDTB.owl#nullaltLabel -->

    <owl:DatatypeProperty rdf:about="#nullaltLabel"/>



    <!-- http://www.w3.org/2004/02/skos/core#altLabel -->

    <owl:DatatypeProperty rdf:about="&skos;altLabel"/>



